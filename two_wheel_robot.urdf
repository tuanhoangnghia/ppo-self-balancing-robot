<?xml version="1.0"?>
<robot name="simple_balancer_high_cg_with_legs">

  <material name="blue">
    <color rgba="0.2 0.2 1.0 1.0"/>
  </material>
  <material name="black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>
  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <link name="chassis_link">
    <visual>
      <geometry>
        <box size="0.18 0.25 0.25"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.03 0 0.35"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.18 0.25 0.25"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.03 0 0.35"/>
    </collision>
    <inertial>
      <mass value="2.5"/>
      <origin rpy="0 0 0" xyz="0.03 0 0.35"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <link name="left_leg_link">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.02"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 -0.046 0.1"/>
      <material name="grey"/>
    </visual>
    <inertial>
      <mass value="1e-5"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
  </link>

  <link name="right_leg_link">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.02"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.046 0.1"/>
      <material name="grey"/>
    </visual>
    <inertial>
      <mass value="1e-5"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
  </link>

  <link name="left_wheel_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.08"/>
      </geometry>
      <origin rpy="1.5707 0 0" xyz="0 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.08"/>
      </geometry>
      <origin rpy="1.5707 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <link name="right_wheel_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.08"/>
      </geometry>
      <origin rpy="1.5707 0 0" xyz="0 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.08"/>
      </geometry>
      <origin rpy="1.5707 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="chassis_to_left_leg" type="fixed">
    <parent link="chassis_link"/>
    <child link="left_leg_link"/>
    <origin xyz="0 0.15 0.08" rpy="0 0 0"/>
  </joint>

  <joint name="chassis_to_right_leg" type="fixed">
    <parent link="chassis_link"/>
    <child link="right_leg_link"/>
    <origin xyz="0 -0.15 0.08" rpy="0 0 0"/>
  </joint>

  <joint name="left_leg_to_wheel" type="revolute">
    <parent link="left_leg_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="100"/>
  </joint>

  <joint name="right_leg_to_wheel" type="revolute">
    <parent link="right_leg_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="100"/>
  </joint>

</robot>